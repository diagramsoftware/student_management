<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view__faculty_tree" model="ir.ui.view">
			<field name="name">faculty.tree</field>
			<field name="model">teacher.information</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Faculty">
					<field name="employee_id" />
					<field name="name" />
					<field name="middle_name" />
					<field name="last_name" />
					<field name="blood_group" />
				</tree>
			</field>
		</record>
		<record id="view_faculty_form" model="ir.ui.view">
			<field name="name">student.faculty.form</field>
			<field name="model">teacher.information</field>
			<field name="context">{'show_address': 1}</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Faculty" version="7.0">
					<sheet>
						<field name="image" widget="image" class="oe_left oe_avatar" />
						<div class="oe_title">
							<h1>
								<field name="employee_id" placeholder="Employee Id" style="width: 30%%" />
							</h1>
							<h1><table>
								<tr>
								<td><field name="name" placeholder="First Name" style="padding-right:10px" /></td>
								<td><field name="middle_name" placeholder="Middle Name" style="padding-right:10px" /></td>
								<td><field name="last_name" placeholder="Last Name" style="padding-right:10px" /></td>
								</tr>
								</table>
							</h1>
						</div>
						<separator colspan="4" string="Basic Information" />
						<group colspan="4" col="8">
							<group col="8" colspan="4">
								<group col="6" colspan="4">
									<field name="gender" />
									<field name="contact" />
									<field name="email" />
								</group>
							</group>
						</group>
						<notebook colspan="4">
							<page string="Personal Information">
								<group col="4">
									<field name="birth_date" />
									<field name="blood_group" />
									<field name="nationality" />
									<field name="pan_card" />
									<field name="language" />
									<field name="bank_acc_num" />
									<field name="visa_info" />
								</group>
								
								<separator colspan="4" string="Address Detail"/>
								<group>
									<label for="street" string="Address"/>
									<div name="div_address">
										<field name="street" placeholder="Street..."/>
										<field name="street2" placeholder="Street2"/>
										<div class="address_format">
											<field name="city" placeholder="City" style="width: 40%%"/>
											<field class="oe_no_button" name="state_id" options="{&quot;no_open&quot;: True}" placeholder="State" style="width: 37%%"/>
											<field name="zip" placeholder="ZIP" style="width: 20%%"/>
										</div>
										<field class="oe_no_button" name="country_id" options="{&quot;no_open&quot;: True}" placeholder="Country"/>
									</div>
								</group>
							</page>
							<page string="Subjects Detail">
								<field name="faculty_subject_ids" colspan="4" nolabel="1" />
							</page>
						</notebook>
					</sheet>
					<!-- <field name="photo" /> -->
				</form>
			</field>
		</record>
		<record id="teacher_information_list_action" model="ir.actions.act_window">
			<field name="name">Teacher Information</field>
			<field name="res_model">teacher.information</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the First Teacher</p>
			</field>
		</record>
		<menuitem action="teacher_information_list_action" id="teacher_information_menu" name="Teacher Information" parent="student_marksheet.submenu_teacher_menu" sequence="1"/>
	</data>
</openerp>